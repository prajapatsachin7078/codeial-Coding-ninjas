<li class="comment-item">
    <p>
        <% if(locals.user && locals.user.id == comment.user.id) { %>
            <small>
                <a href="/comments/destroy/<%= comment.id %>"><i class="fas fa-trash-alt"></i></a>
            </small>
        <% } %>        
        <%= comment.content %>
        <br>
        <small>
            <%= comment.user.name %>
        </small>
    </p>
</li>
